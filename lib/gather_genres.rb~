module GatherGenres
  def gather
    @genres = Array.new
    Artist.each.all do |artist|
      @add_new_genre = 1;
      @genres.each do |genre|
        if genre == artist.genre
          @add_new_genre = 0
        end
      end
      if @add_new_genre == 1
        @genres.concat[artist.genre]
      end
    end
    @genres.each do |genre|
      puts genre
    end
  end
end
