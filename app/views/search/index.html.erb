<body>
  <div id="columns">
    <div id="main">
      <h2> Select an Song </h2><br />
      <% previous_song = " " %>
      <% if @songs != nil %>
      <% for song in @songs -%>
        <% if previous_song != song.title %>
           <h3>
             <a href="../songs/<%=h song.id %>"> <%=h song.title %> </a>
           </h3>
         <% end %>
         <% previous_song = song.title %>
      <% end %>
      <% end %>
      <% if @artists != nil %>
      <% for artist in @artists -%>
           <h3>
             <a href="../artists?artist=<%=h artist.name %>"> <%=h artist.name %> </a>
           </h3>
      <% end %>
      <% end %>
      <br /><br />
