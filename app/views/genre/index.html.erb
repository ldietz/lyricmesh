      <% end %>
      </div>
      <div id="mainmiddle">
        <h2> Select an Artist </h2>
        <% for num in (@count/3)+1..@count*2/3 -%>
            <h3>
              <a href="../genre/show?genre=<%= @genres[num] %>"><%= @genres[num] %></a><br/>
            </h3>
        <% end %>
      </div>
      <div id="mainright">
        <% for num in (@count*2/3)+1..@count-1 -%>
            <h3>
          <a href="../genre/show?genre=<%= @genres[num] %>"><%= @genres[num] %></a><br/>
