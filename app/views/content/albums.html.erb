<div id="columns">
  <div id="adleft">
    <% render :partial => 'layouts/adcode', :locals => {:post => @post} %>
  </div>
  <div id="adright">
    <h3> 
    <%= @artist.name %>
    <%= image_tag (@artist.image_url, :size =>"140x140") %>
    <%= @artist.genre %><br/>
    <p> <%= @artist.description %> </p>
    </h3>
  </div>
  <div id="main">
    <div id="mainleft">
      <% @count = @albums.count %>
      <% for num in 0..@count/3 -%>
        <h3>
          <% cd_cover = "../content/albumsongs?browse=" + @albums[num].id.to_s %>
          <a href="../content/albumsongs?browse=<%=h @albums[num].id %>"> <%=h @albums[num].album %> </a><br />
          <%= link_to image_tag (@albums[num].photo_url, :size =>"100x100"), cd_cover  %><br />
          <%= @albums[num].year %>
        </h3>
      <% end %>
    </div>
    <div id="mainmiddle">
      <h2> Select an Album </h2>
      <% for num in (@count/3)+1..@count*2/3 -%>
        <h3>
          <% cd_cover = "../content/albumsongs?browse=" + @albums[num].id.to_s %>
          <a href="../content/albumsongs?browse=<%=h @albums.id %>"> <%=h @albums[num].album %> </a><br />
          <%= link_to image_tag (@albums[num].photo_url, :size =>"100x100"), cd_cover  %><br />
          <%= @albums[num].year %>
        </h3>
      <% end %>
    </div>
    <div id="mainright">
      <% for num in (@count*2/3)+1..@count-1 -%>
        <h3>
          <% cd_cover = "../content/albumsongs?browse=" + @albums[num].id.to_s %>
          <a href="../content/albumsongs?browse=<%=h @albums[num].id %>"> <%=h @albums[num].album %> </a><br />
          <%= link_to image_tag (@albums[num].photo_url, :size =>"100x100"), cd_cover  %><br />
          <%= @albums[num].year %>
        </h3>
      <% end %>
    </div><br /><br />
    <%= render :partial => 'layouts/bottombackground', :locals => {:post => @post} %>
  </div>
</div>
