<div id="columns">
  <div id="adleft">
    <% render :partial => 'layouts/adcode', :locals => {:post => @post} %>
  </div>
  <div id="adright">
    <p>
      <% cd_cover = "../content/albumsongs?browse=" + @album.id.to_s %>
      <%= link_to  image_tag (@album.photo_url, :size =>"110x110"), cd_cover %><br/>
      <h5> <%= @album.album %> <%= @album.year %> </h5>
      <%= @album.description %>
    </p>       
  </div>
  <div id="main">
    <h2> Select a Song </h2><br />
    <% for song in @songs -%>
      <h3><%= link_to(song.title,"../content/showsong?id="+song.id+"&album="+ @album.artist_id) %></h3>
    <% end %><br/><br/>
    <%= render :partial => 'layouts/bottombackground', :locals => {:post => @post} %>
  </div>
</div>
